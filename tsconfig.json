{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declarationDir": "dist/types",
    "declaration": true
  },
  "lib": ["esnext"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
