{
  "name": "let-it-go",
  "version": "0.0.6",
  "description": "❄️ Let your website snow instantly",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm type-check --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rollup -c",
    "build": "pnpm build:types && pnpm build:js",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.ts src",
    "prepublishOnly": "pnpm build",
    "release": "sh scripts/release.sh",
    "deploy:demo": "sh scripts/deploy.sh"
  },
  "keywords": [
    "let-it-go",
    "snow",
    "snowfall",
    "canvas"
  ],
  "author": "汪東陽 EastSun5566",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EastSun5566/let-it-go"
  },
  "homepage": "https://eastsun5566.github.io/let-it-go/",
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@types/offscreencanvas": "^2019.6.4",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^8.0.2",
    "rollup": "^2.34.1",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.1.2"
  }
}
